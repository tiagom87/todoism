<div class="row">
  <div class="col-md-3">
    <h2>To Do</h2>
    <hr>
    <% if @to_do.size < 1 %>
    <p class="text-center">No tasks here</p>
    <% else %>
    <%= render @to_do %>
    <% end %>
    <%= render "tasks/form" %>
  </div>
  <div class="col-md-3">
    <h2>Doing</h2>
    <hr>
    <% if @doing.size < 1 %>
    <p class="text-center">No tasks here</p>
    <% else %>
    <%= render @doing %>
    <% end %>
  </div>
  <div class="col-md-3">
    <h2>Done</h2>
    <hr>
    <% if @done.size < 1 %>
    <p class="text-center">No tasks here</p>
    <% else %>
    <%= render @done %>
    <% end %>
  </div>
  <div class="col-md-3">
  <h2>Members</h2>
  <hr>
  <% if @board_members.any? %>
  <%= render "board_members/form" %>
  <% end %>

   <% @active_board_members.each do |board_member| %>
          <p><%= board_member.user.first_name %> <small>(<%= link_to "Remove", board_board_member_path(@board, board_member), method: :delete %>)</small></p>
      <% end %>

  </div>
</div>


<div class="row">
<div class="col-md-12">
<%= link_to "Archived Tasks", board_archived_path(@board), class: "pull-right" %>
</div>

</div>