<%= simple_form_for([@board, @task]) do |f| %>
<div class="panel panel-default">
      <div class="panel-body">
        <%= f.input :content, input_html: {class: "form-control"}, label: false, placeholder: "Type your task here" %>
        <%= f.association :board_members, collection: BoardMember.where(board_id: @board.id), input_html: { class: 'chosen-select form-control' }, label: false, label_method: :name %>
        <%= f.hidden_field :state, value: "to_do" %>
        <%= f.submit "Create", class: "btn btn-info btn-block" %>
      </div>
      
    </div>
<% end %>